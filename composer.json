{
  "name": "frankandoak/silo",
  "repositories": [
    {
        "type": "vcs",
        "url": "https://github.com/dav-m85/makefile-trusty"
    }
  ],
  "require": {
    "silex/silex": "^2.0",
    "monolog/monolog": "v1.19.0",
    "symfony/console":"v2.7.5",
    "doctrine/orm": "v2.5.4",
    "parsecsv/php-parsecsv": "0.4.5",
    "doctrine/migrations": "*",
    "symfony/validator": "^3.1",
    "dav-m85/std-makefile":"dev-master",
    "beberlei/metrics": "^2.5"
  },
  "require-dev": {
    "behat/behat": "v2.5.5",
    "phpunit/php-code-coverage": "^2.2",
    "symfony/browser-kit": "^3.2",
    "symfony/css-selector": "^3.2"
  },
  "suggest": {
    "sorien/silex-pimple-dumper": "In case your IDE supports silex container auto completion"
  },
  "config": {
    "bin-dir": "bin/"
  },
  "autoload": {
    "psr-4": {
      "Silo\\": "server",
      "Silo\\Context\\": "features/contexts"
    }
  }
}
